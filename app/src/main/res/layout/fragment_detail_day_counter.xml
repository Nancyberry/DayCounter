<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/day_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="35dp"
        android:textSize="20dp"
        android:text="123 days left until"/>
    <TextView
        android:id="@+id/original_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="35dp"
        android:textSize="27dp"
        android:text="2015/04/21"
        />

    <TextView
        android:id="@+id/what_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:text="Haha's Birthday"
        />

    <Button
        android:id="@+id/edit_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:text="@string/day_counter_detail_edit"
        />
</LinearLayout>